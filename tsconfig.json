{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2023",
		"lib": [
			"ES2023"
		],
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"declaration": true,
		"outDir": "out",
		"resolveJsonModule": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true, // don't know how to fix it
		"sourceMap": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"test-resources",
		".test-extensions"
	]
}